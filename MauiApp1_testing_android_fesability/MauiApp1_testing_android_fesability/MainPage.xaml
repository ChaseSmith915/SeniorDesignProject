<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HourGuard.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <HorizontalStackLayout
            Grid.Row="0"
            Padding="30">
            <Image
                Source="fire.png"
                HeightRequest="60"
                WidthRequest="60"
                Aspect="AspectFit"
                SemanticProperties.Description="Streak Image" />

            <Label
                x:Name="StreakNumLabel"
                Text="49 Days"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level2"
                VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout
                x:Name="TargetAppsList">
                <Button
                    x:Name="AddAppButton"
                    Text="Target a New App +"/>
            </VerticalStackLayout>
        </ScrollView>

        <Button
            Grid.Row="2"
            x:Name="EnablePermissionsButton"
            Text="Enable Permissions"
            ToolTipProperties.Text="Notes: You must enable the Accessibility service for this app in Settings -> Accessibility."/>
    </Grid>
</ContentPage>