<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="HourGuard.DialogActivity"
    Padding="24">

    <VerticalStackLayout Spacing="16">

        <!-- Daily limit section -->
        <Label
            Text="Daily Limit usage NEW XAML"
            FontSize="18"
            FontAttributes="Bold" />

        <ProgressBar
            x:Name="UsageProgress"
            HeightRequest="6"
            Progress="0" />

        <Label
            x:Name="StreakLabel"
            FontSize="18" />

        <!-- Main prompt -->
        <Label
            x:Name="PromptLabel"
            FontSize="18" />

        <!-- Question -->
        <Label
            x:Name="QuestionLabel"
            FontSize="18" />

        <!-- Answer input -->
        <Entry
            x:Name="AnswerEntry"
            Placeholder="Enter your answer"
            MaxLength="16" />

        <!-- Session timer -->
        <Label
            Text="Optionally, specify a session timer."
            FontSize="18" />

        <Slider
            x:Name="TimeSlider"
            Minimum="0"
            Maximum="60" />

        <Label
            x:Name="TimeLabel"
            Text="Duration: Unlimited"
            FontSize="16" />

        <!-- Buttons -->
        <HorizontalStackLayout
            x:Name="ButtonRow"
            Spacing="12" />

    </VerticalStackLayout>
</ContentPage>
