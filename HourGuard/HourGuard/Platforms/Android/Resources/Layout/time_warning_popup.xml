<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">
	<LinearLayout
        android:id="@+id/time_warning_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="12dp">
		<!-- Header -->
		<LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:spacing="12dp">
			<TextView
                android:id="@+id/headerText"
				android:text="HourGuard"
				android:textSize="32sp"
				android:textStyle="bold"
				android:textAlignment="center"
				android:textColor="@color/Primary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		<!-- divider header -->
		<View
			android:id="@+id/dividerHeader"
			android:layout_width="match_parent"
			android:layout_height="2dp"
            android:background="@color/PrimaryDarkText"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="8dp"/>
		<!-- Prompt label -->
		<TextView
            android:id="@+id/continueIntoAppText"
            android:text="continueIntoAppText"
            android:textSize="18sp"
            android:textColor="@color/PrimaryDarkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
			android:textStyle="bold"
			android:gravity="center_horizontal"/>
		<!-- Continue button -->
		<LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:spacing="12dp">
			<Button
                android:id="@+id/yesButton"
                android:text="Continue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
			    android:backgroundTint="@color/Primary"
		        android:textColor="@color/Gray100"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
